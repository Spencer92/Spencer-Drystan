#include "osbind.h"

typedef enum PLAYER_BEHAVIOUR
{
	MOVE_RIGHT,
	MOVE_LEFT,
	MOVE_UP,
	MOVE_DOWN,
	FIRE_MISSILE,
	EXPLODE

}PLAYER_BEHAVIOUR;



PLAYER_BEHAVIOUR player_right_check(Player *Player, Object object)
{
  if(player->x_coordinate+1 != object->x_coordinate)
    {
      return MOVE_RIGHT;
    }
}

PLAYER_BEHAVIOUR player_up_check(Player *Player, Object object)
{
  if(player->y_coordinate-1 != object->y_coordinate)
    {
      return MOVE_UP;
    }
}

PLAYER_BEHAVIOUR player_down_check(Player *Player, Object object)
{
  if(player->y_coordinate+1 != object->y_coordinate)
    {
      return MOVE_DOWN;
    }
}

PLAYER_BEHAVIOUR player_left_check(Player *Player, Object object)
{
  if(player->x_coordinate-1 != object->x_coordinate)
    {
      return MOVE_LEFT;
    }
}

PLAYER_BEHAVIOUR player_fire_check(Player *player)
{
	char input = Cconis();
	if(input == ' ')
	{
		player->is_firing = 1;
		return FIRE_MISSILE;
	}
}

PLAYER_BEHAVIOUR player_explode_check(Player *player, Missile *missile)
{
	if(player->x_coordinate == missile->x_coordinate || player->y_coordinate == missile->x_coordinate)
	{
		return EXPLODE;
	}
}



